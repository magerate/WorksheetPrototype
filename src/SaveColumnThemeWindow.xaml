<Window x:Class="WorksheetPrototype.SaveColumnThemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Column Theme as" Height="140" Width="300" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="12">

        <TextBlock Margin="0,0,0,8">Column Theme Name:</TextBlock>
        <TextBox Margin="0,0,0,8" Name="themeName"></TextBox>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Margin="0,4,8,4" Width="70" IsCancel="True">Cancel</Button>
            <Button Margin="4" Width="70" IsDefault="True" Click="Button_Click">OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
